<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/left_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/app_icon"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/left_ic"
        android:text="乌鲁木齐电视台"
        android:singleLine="true"
        android:textColor="@color/text_bg"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/lanmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_alignParentRight="true"
        android:text="经济半小时"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:textColor="@color/text_bg"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_toRightOf="@id/left_ic"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        android:text="电视台"
        android:singleLine="true"
        android:textColor="@color/text_bg"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/time"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:text="2分钟前"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_gray_bg"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/location"
        android:layout_below="@id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京复兴门"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/dimen_15"
        android:singleLine="true"
        android:drawableLeft="@drawable/outdoor_location"
        android:drawablePadding="5dp"
        android:layout_toRightOf="@id/left_ic"
        android:textColor="@color/text_bg"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/contactme"
        style="@style/btn_bule5_borad_style"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_below="@id/location"
        android:layout_toRightOf="@id/left_ic"
        android:onClick="onClick"
        android:text="请媒体联系我"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/contactme"
        android:background="@color/gray"/>
</RelativeLayout>