<!-- 服务类表页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bule"
    android:orientation="vertical">

    <!-- 顶部标题 -->
    <com.topad.view.customviews.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/app_bg"
        android:layout_below="@id/title"
        android:layout_above="@id/bottom_layout">

        <LinearLayout
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/gray_bg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/dark_gray_text"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="北京市聚宝网深圳分公司"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_bg"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_price_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="出价："
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:textColor="@color/text_gray_bg"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="￥12000"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:textColor="@color/hot"
                            android:layout_toRightOf="@id/tv_price_tip"/>

                        <ImageView
                            android:id="@+id/im_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ads_icon_good"
                            android:layout="@id/tv_praise"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="高价发标编辑捕鱼游戏一套完整成熟的概率数值控制代码～"
                        android:textSize="16sp"
                        android:textColor="@color/text_gray_bg"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/outdoor_location"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="北京市西城区广安门外大街248号机械大厦1001"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_gray_bg"
                            android:singleLine="true"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp">

                    <!-- 到期 -->
                    <Button
                        android:id="@+id/btn_countdown"
                        style="@style/btn_bule_borad_style"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:text="类型：广告创意-网站软件"
                        android:textColor="@color/text_gray_bg"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                    <!-- 时间 -->
                    <Button
                        android:id="@+id/btn_time"
                        style="@style/btn_bule_borad_style"
                        android:layout_weight="2"
                        android:focusable="false"
                        android:drawableLeft="@drawable/adsd_button_collect"
                        android:text="2015-10-22"
                        android:textColor="@color/text_gray_bg"
                        android:paddingLeft="5dp"
                        android:paddingRight="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 中部 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_need"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="具体需求"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>

                <com.topad.view.customviews.MyGridView
                    android:id="@+id/gv_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:columnWidth="90dp"
                    android:numColumns="5"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:layout_below="@id/tv_need"/>

                <TextView
                    android:id="@+id/tv_need_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="需求描述"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/gv_in" />


                <TextView
                    android:id="@+id/tv_need_details_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="      高价发标编辑捕鱼游戏一套完整成熟的概率数值控制代码～"
                    android:textSize="16sp"
                    android:textColor="@color/text_gray_bg"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_need_details"/>

                <!-- 提交 -->
                <Button
                    android:id="@+id/btn_submit"
                    style="@style/btn_bule2_borad_style"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="我要提交"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_need_details_content"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>